<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      rel="stylesheet"
      href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css"
    />
    <link rel="stylesheet" href="/css/style.css" />
    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.bundle.min.js"></script>
    <title>SecretChat|Login</title>
  </head>
  <body>
    <div class="container">
      <div class="header row mt-4">
        <div class="offset-md-4 col-md-4">
          <h1 class="welcome-message">Welcome To the Dashboard</h1>
        </div>
      </div>
      <div class="row chat-box">
        <div class="offset-md-2 col-md-8">
          <table class="table table-light">
            <thead class="thead-dark">
              <tr>
                <th>Id</th>
                <th>Username</th>
                <th>Room</th>
                <th>Action</th>
              </tr>
            </thead>

            <% users.forEach(user => { %>
            <tr>
              <td><%= user.id %></td>
              <td><%= user.username %></td>
              <td>Default</td>
              <td>
                <span>
                  <button onclick="deleteUser(event)" class="btn btn-danger">
                    Delete
                  </button>
                </span>
              </td>
            </tr>
            <% }) %>
          </table>
        </div>
      </div>
    </div>
  </body>
  <script>
    async function deleteUser(event) {
      const id = event.target
        .closest("tr")
        .firstElementChild.textContent.trim();
      const data = { id };
      const stringigiedData = JSON.stringify(data);
      await fetch("/admin/user", {
        method: "DELETE",
        headers: {
          "Content-Type": "application/json",
        },
        body: stringigiedData,
      })
      window.location.reload()
    }
  </script>
</html>
