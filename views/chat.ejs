    <script src="https://kit.fontawesome.com/a765c689c1.js" crossorigin="anonymous"></script>
    <title>SecretChat|Login</title>

   
  </head>
  <% if (typeof username == 'undefined' || typeof roomId == 'undefined') { %>
    <script>
      alert("Invalid Request")
      window.location.href = "/";
    </script>
  <% } else{ %>
    <body>
      <div class="container">
        <div class="header row mt-4">
          <div class="offset-md-3 col-md-6">
            <h1>Welcome <%= username %></h1>
            <div style="display: inline;">
              <h3 id="roomId">Your room ID:</h3>
              <div class="input-group input-group-lg">
                <input id="roomToken" type="text" class="form-control" value="<%= roomId %>" readonly>
                <div class="input-group-append">
                  <span class="input-group-text" id="basic-addon2">
                    <i onclick="copyToClipboard()" class="far fa-clipboard ml-3 clipboard-icon" 
                    data-toggle="tooltip" data-placement="right" title="Copy To Clipboard"></i>  
                  </span>
                </div>
              </div>
            </div>
  
          </div>
        </div>
        <div class="row">
          <div class="offset-md-2 col-md-8 mt-5">
            <div>
              <span style="float: right;">
                <% if (creator) { %>
                  <button onclick="destructRoom()" class="btn btn-danger">Destruct Room</button>
                <% } else{ %>
                <a href="/" class="ml-3 btn btn-warning">Leave Room</a>
                <% } %>
              </span>
            </div>
          </div>
        </div>
        <div class="row chat-box">
          <div class="offset-md-2 col-md-8">
           
            <div class="chat-messages">
              <div class="crypted-label">
                <span>
                 <i class="fas fa-lock"></i>
                  This conversation is crypted
                 </span>
              </div>
            </div>
            <form id="message-form" autocomplete="off">
              <input
                class="form-control mt-3"
                id="message"
                type="text"
                placeholder="Your Secret Message ..."
                name="message"
                readonly
              />
              <input class="form-control mt-3" type="submit" value="Send" id="send" disabled />
            </form>
          </div>
        </div>
      </div>

      <div style="color: white;">  
        
      </div>

     <script src="/socket.io/socket.io.js"></script>
     <script src="/js/lib/encoding.js"></script>
    <script src="/js/lib/encoding-indexes.js"></script>
    <script src="/js/lib/converter-wrapper.js"></script>
    <script src="/js/lib/cryptoUtils.js"></script>
